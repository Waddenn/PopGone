{
  "update_url": "https://clients2.google.com/service/update2/crx",

  "name": "PopGone",
  "author": "Wade",
  "description": "One click to close any overlay on any website.",
  "version": "1.0.0",
  "permissions": ["activeTab"],
  "background": {
    "scripts": ["src/js/background.js", "src/js/overlay_remover.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "32": "resources/icons/pop_gone_icon_32.png",
      "38": "resources/icons/pop_gone_icon_38.png",
      "64": "resources/icons/pop_gone_icon_64.png"
    },
    "default_title": "PopGone"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "One click to close any overlay on any website."
    }
  },
  "icons": {
    "128": "resources/icons/pop_gone_icon_128.png"
  },
  "manifest_version": 2
}
